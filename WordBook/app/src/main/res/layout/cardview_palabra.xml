<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardElevation="5dp"
    cardview:cardCornerRadius="4dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Cv_Imagen_Palabra"
            android:layout_width="@dimen/img1"
            android:layout_height="@dimen/img1"
            android:src="@drawable/img"
            android:paddingLeft="@dimen/padding1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            style="@style/textcard1">
            <TextView
                android:id="@+id/Cv_Palabra_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inglés"
                style="@style/en1"/>
            <TextView
                android:id="@+id/Cv_Palabra_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Español"
                style="@style/es1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>